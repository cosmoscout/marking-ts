{
  "extends": [
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true,
        "allow": [
          "_menu",
          "_settings",
          "_selectionSubject$"
        ]
      }
    ],
    "max-len": [
      "error",
      {
        "code": 120
      }
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "preSetup",
          "afterSetup",
          "isLeaf",
          "traceLogic",
          "selectionLogicInGeometryOperations",
          "getChildren"
        ]
      }
    ]
  }
}
