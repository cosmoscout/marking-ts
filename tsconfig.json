{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "removeComments": true,
    "allowJs": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
